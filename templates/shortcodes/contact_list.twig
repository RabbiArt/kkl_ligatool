<div class="kl-contact-list">
    <nav>
        <ul>
            <li><a href="#all" data-id="all">Alle</a></li>
            <li><a href="#ligaleitung" data-id="ligaleitung">Ligaleitung</a></li>
            <li><a href="#captain" data-id="captain">Kapitän</a></li>
            <li><a href="#vice_captain" data-id="vice_captain">Vize Kapitän</a></li>
            {% for league in leagues %}
                <li><a href="#{{ league.code }}" data-id="{{ league.current_season }}">{{ league.name }}</a></li>
            {% endfor %}
        </ul>
    </nav>

    <div class="wrapper">
        {% for player in players %}
            <div class="contact -in" data-league="{{ player.league_short }}" data-role="{{ player.role }}"
                 data-team="{{ player.team_short }}">
                <h3>{{ player.first_name }} {{ player.last_name }}</h3>

                {% if player.team %}
                    <span class="team">{{ player.team }}</span>
                {% endif %}

                <p>
                    {% if player.location %}
                        <span class="location">Spielort:</span> {{ player.location }}<br/>
                    {% endif %}
                    <span class="phone">Telefon:</span> {{ player.phone }}<br/>
                    <span class="email">E-Mail:</span> <a href="mailto:{{ player.email }}">{{ player.email }}</a>
                </p>
            </div>
        {% endfor %}
    </div>
</div>

